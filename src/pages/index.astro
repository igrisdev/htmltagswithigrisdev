<script>
  const tags = document.querySelectorAll('.contentTag')
  const viewInfo = document.getElementById('article')

  tags.forEach((tag) => {
    tag.addEventListener('mouseover', () => {
      const info = tag.textContent
      viewInfo.innerHTML = `${info}`
    })
  })
</script>
