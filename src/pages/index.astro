<Layout title='HTML TAGS with igris.dev'>
  <section class='grid place-content-center text-center h-32'>
    <!-- esta en veremos -->
    <!-- <small class='absolute text-sm -top-2 -right-1'>igris.dev</small> -->
    <h1 class='relative text-4xl mb-3 font-bold text-white'>
      HTML <span>TAGS</span>
    </h1>
    <p>Vistazo r√°pido a la funcionalidad de los <span>TAGS</span></p>
  </section>

  <section
    id='main'
    class='place-content-between gap-y-2'
  >
    {
      tags.map((tag) => (
        <a
          href='#'
          class={`contentTag bg-${tag.color}-500 size-20 rounded-sm grid place-items-center relative`}
        >
          {tag.title}
        </a>
      ))
    }

    <article id='article'>info</article>
  </section>
</Layout>

<style>
  #main {
    display: grid;
    grid-template-columns: repeat(12, 5rem);
    grid-template-rows: repeat(12, 5rem);
    margin-top: 2rem;
  }

  .contentTag {
  }

  #article {
    background: black;
    grid-column-start: 4;
    grid-column-end: 10;
    grid-row-start: 4;
    grid-row-end: 6;
    width: 100%;
    height: 100%;
    border-radius: 2px;
    padding: 0.5rem;
  }
</style>

<script>
  const tags = document.querySelectorAll('.contentTag')
  const viewInfo = document.getElementById('article')

  tags.forEach((tag) => {
    tag.addEventListener('mouseover', () => {
      const info = tag.textContent
      viewInfo.innerHTML = `${info}`
    })
  })
</script>
